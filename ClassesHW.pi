def name_max_weight():
    name = ""
    max_weight = 0
    for animal in register:
        if animal.weight >= max_weight:
            max_weight = animal.weight
            name_max_weight = animal.name
    return name_max_weight
def total_weight():
    total_weight = 0
    for animal in register:
        total_weight += animal.weight
    return total_weight

