register =[]
class animal():
    status = 'unfeed'
    sound = ""
    product = ""

    def __init__(self, name, weight):
        self.name = name 
        self.weight = weight
        register.append(self)

    def voice(self):
        print(self.sound)

    def collect(self):
        print(f'{self.product} collected')

    def feed(self):
        self.status = 'feeded'


class bird(animal):
    product = "eggs"
class cattle(animal):
    product = "milk"
class sheep(animal):
    sound = "бе-бе"
    product = "wool"
class goat(cattle):
    sound = "ме-ме"
class cow(cattle):
    sound = "му-му"
class goose(bird):
    sound = "га-га"
class chicken(bird):
    sound = "ко-ко"
class duck(bird):
    sound = "кря-кря"


